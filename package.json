{
  "name": "steamchat-website",
  "version": "3.0.0",
  "description": "Steamchat Podcast Website",
  "main": "server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node server",
    "postinstall": "npm run assets:build",
    "watch": "npm run server:watch & npm run assets:watch",
    "server:watch": "nodemon server.js --inspect",
    "assets:build": "webpack --config webpack.config.js --progress",
    "assets:watch": "npm run assets:build -- -w",
    "test": "mocha ./tests/**/*.spec.js --exit",
    "test:watch": "npm run assets:build && mocha --require @babel/polyfill --require @babel/register './tests/**/*.spec.js' -w",
    "coverage": "nyc --reporter=lcov npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://Flamov@github.com/Flamov/steamchat-website.git"
  },
  "keywords": [
    "steamchat",
    "website",
    "podcast"
  ],
  "author": "Samuel Kindler",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Flamov/steamchat-website/issues"
  },
  "homepage": "https://github.com/Flamov/steamchat-website#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "config": "^3.0.1",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-minify-html": "^0.12.0",
    "mongo-sanitize": "^1.0.1",
    "mongoose": "^5.4.4",
    "nodemon": "^1.18.9",
    "pug": "^2.0.3"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "cheerio": "^1.0.0-rc.2",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.12.3",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "path": "^0.12.7",
    "stylelint": "^9.10.0",
    "stylelint-config-airbnb": "0.0.0",
    "supertest": "^3.4.1"
  }
}
